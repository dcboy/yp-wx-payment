{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "env": {
    "mocha": true
  },
  "rules": {
    "no-tabs": 0,
    "no-param-reassign": 0,
    "no-return-await": 0,
    "max-len": [
      1,
      400
    ],
    "no-await-in-loop": 0,
    "camelcase": 0,
    "global-require": 0,
    "no-restricted-syntax": 0,
    "import/no-dynamic-require": 0,
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "__v",
          "_id"
        ]
      }
    ]
  }
}